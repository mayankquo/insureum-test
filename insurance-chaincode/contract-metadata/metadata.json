{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Hyperledger Fabric Contract Definition JSON Schema",
  "required": ["info", "contracts"],
  "properties": {
    "info": {
      "$ref": "#/definitions/info"
    },
    "contracts": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "$ref": "#/definitions/contract"
        }
      }
    },
    "components": {
      "$ref": "#/definitions/components"
    }
  },
  "definitions": {
    "info": {
      "type": "object",
      "description": "General information about the API.",
      "required": ["version", "title"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Insurance Contract"
        },
        "version": {
          "type": "string",
          "description": "1.0.1"
        }
      }
    },
    "contract": {
      "type": "object",
      "description": "",
      "required": ["name", "transactions"],
      "properties": {
        "info": {
          "$ref": "#/definitions/info"
        },
        "name": {
          "type": "string",
          "description": "InsuranceContract"
        },
        "transactions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/transaction"
          }
        }
      }
    },
    "transaction": {
      "type": "object",
      "description": "single transaction specification",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "issue"
        },
        "tag": {
          "type": "array",
          "items": {
            "type": "string",
            "description": "issueTx"
          }
        }
      }
    },
    "components": {
      "type": "object",
      "properties": {
        "schemas": {
          "Insurance": {
            "$id": "Insurance",
            "type": "object",
            "properties": [
              {
                "name": "id",
                "schema": {
                  "type": "string"
                }
              },
              {
                "name": "issuedBy",
                "schema": {
                  "type": "string"
                }
              },
              {
                "name": "type",
                "schema": {
                  "type": "string"
                }
              },
              {
                "name": "premium",
                "schema": {
                  "type": "string"
                }
              },
              {
                "name": "buyer",
                "schema": {
                  "type": "string"
                }
              },
              {
                "name": "nominee",
                "schema": {
                  "type": "string"
                }
              },
              {
                "name": "sumCovered",
                "schema": {
                  "type": "string"
                }
              },
              {
                "name": "issuedAt",
                "schema": {
                  "type": "string"
                }
              },
              {
                "name": "boughtAt",
                "schema": {
                  "type": "string"
                }
              },
              {
                "name": "claimedAt",
                "schema": {
                  "type": "string"
                }
              },
              {
                "name": "updatedAt",
                "schema": {
                  "type": "string"
                }
              },
              {
                "name": "renewedAt",
                "schema": {
                  "type": "string"
                }
              },
              {
                "name": "expiredAt",
                "schema": {
                  "type": "string"
                }
              }
            ]
          }
        }
      }
    }
  }
}
